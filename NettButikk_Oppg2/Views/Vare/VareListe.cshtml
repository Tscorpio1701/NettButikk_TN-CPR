            @Html.DisplayFor(modelItem => item.Pris)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Varebeholdning)
        </td>
        <td>
            @Html.ActionLink("Endre Vare", "endreVare", new { id=item.ID }) |
