@model IEnumerable<NettButikk_Oppg2.Model.Vare>

@{
    ViewBag.Title = "VareListe";
}

<h2>Vare Liste</h2>

<p>
    @Html.ActionLink("Ny Vare", "RegistrerVare")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Varenavn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pris)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Varebeholdning)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Varenavn)
        </td>
